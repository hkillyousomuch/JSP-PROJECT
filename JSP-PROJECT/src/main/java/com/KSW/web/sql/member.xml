<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
	<!-- "SELECT COUNT(*) FROM TBL_MEMBER WHERE USERID=?" -->
	<select id="checkId" parameterType="string" resultType="_int">
		SELECT COUNT(*) FROM KSW_USERS WHERE USERID=#{userid}
	</select>
	<insert id="join" parameterType="com.KSW.web.dto.UsersDTO">
		INSERT INTO KSW_USERS VALUES (#{userid},#{userpw},#{username},#{userbirth},#{userphone},#{useraddr},#{useremail})
	</insert>
	<select id="login" parameterType="hashmap" resultType="com.KSW.web.dto.UsersDTO">
		SELECT * FROM KSW_USERS WHERE USERID =#{userid} AND USERPW =#{userpw}
	</select>
	<select id="searchById" parameterType="string" resultType="com.KSW.web.dto.UsersDTO">
		SELECT * FROM KSW_USERS WHERE USERID =#{userid}
	</select>
	<select id="getList" resultType="com.KSW.web.dto.UsersDTO">
		SELECT * FROM KSW_USERS
	</select>
</mapper>
