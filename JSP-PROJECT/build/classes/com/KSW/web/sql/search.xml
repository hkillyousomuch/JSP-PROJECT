<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Search">
	<insert id="insertBoard" parameterType="boarddto">
		INSERT INTO tbl_board VALUES
		(board_seq.nextval, #{boardtitle}, #{boardcontents}, #{username}, sysdate, 0	)
	</insert>
	<select id="selectCartListCount" parameterType="String" resultType="_int">	
		SELECT COUNT(*) FROM KSW_CART WHERE USERID = #{userid}
	</select>
	<select id="getCartList" parameterType="string" resultType="cartdto">	
	SELECT * FROM KSW_CART WHERE USERID = #{userid} ORDER BY CARTNUM asc
	</select>
	<select id="getCartCnt" resultType="_int" parameterType="String">
		SELECT COUNT(*) FROM KSW_CART WHERE USERID = #{userid}
	</select>
</mapper>
 
 
 
 
 
 
 
 
 
 
 
 